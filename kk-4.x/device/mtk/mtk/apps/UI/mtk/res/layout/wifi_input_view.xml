<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<LinearLayout android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:layout_centerInParent="true"
		android:orientation="vertical">
		<TextView android:id="@+id/wifi_input_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:textSize="20dip"
			android:paddingLeft="5dip">
		</TextView>

		<TextView android:id="@+id/wifi_input_edit" 
			android:layout_width="800dip" android:layout_height="55dip"
			android:textColor="@color/white" android:textSize="20dip"
			android:background="@drawable/ipinputview_hight" android:editable="false"
			android:cursorVisible="false" android:paddingLeft="10dip"
			android:focusable="true" android:layout_marginTop="20dip">
		</TextView>
	</LinearLayout>
</RelativeLayout>
