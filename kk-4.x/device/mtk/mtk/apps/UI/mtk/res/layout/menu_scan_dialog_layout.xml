<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:id="@+id/menu_scan_dialog_id" android:orientation="vertical">
	<LinearLayout android:layout_width="wrap_content"
		android:orientation="vertical" android:layout_height="wrap_content"
		android:layout_weight="1" />
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:layout_marginLeft="20dip">
		<TextView android:id="@+id/state" android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="android:style/TextAppearance_Theme_Dialog" />
		<com.mediatek.ui.setup.Loading
			android:id="@+id/setup_tv_scan_loading" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:focusable="false"
			style="@style/textViewStyle" />
	</LinearLayout>
	<TextView android:id="@+id/analoguechannel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="20dip" style="android:style/TextAppearance_Theme_Dialog" />
	<TextView android:id="@+id/numberchannel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="20dip" style="android:style/TextAppearance_Theme_Dialog" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_marginTop="30dip" android:id="@+id/menu_scan_proline"
		android:paddingLeft="20dip" android:paddingBottom="20dip">
		<ProgressBar android:id="@+id/scanprogressbar"
			android:layout_width="300dip" android:layout_height="wrap_content"
			style="@android:style/Widget.ProgressBar.Horizontal"
			android:layout_marginRight="20dip" android:layout_gravity="center" />
		<TextView android:id="@+id/finishpercentage"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/finishpercentage_color" style="android:style/TextAppearance_Theme_Dialog" />
	</LinearLayout>
</LinearLayout>
