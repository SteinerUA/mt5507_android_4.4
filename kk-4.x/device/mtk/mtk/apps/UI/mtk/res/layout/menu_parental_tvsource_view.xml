<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/common_tvsourceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/common_tvsourceview_text_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center_vertical"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/common_ctvsourceview_text_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/common_tvsourceview_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="4"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/poweron_channel_normal" />
    </LinearLayout>

