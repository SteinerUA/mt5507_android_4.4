<?xml version="1.0" encoding="utf-8"?>
	<!-- for data-ENQ -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="match_parent"
	android:orientation="vertical" android:layout_marginRight="15dip">
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" android:layout_weight="1">
		
		<TextView 
		    android:id="@+id/menu_ci_enq_title" 
		    android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1" 
			android:focusable="false"
			android:gravity="center_vertical"/>
		
		<TextView 
			android:id="@+id/menu_ci_enq_name"
		    android:layout_width="match_parent"
			android:layout_height="fill_parent" 
			android:layout_weight="1" 
			android:focusable="false"
			android:gravity="center_vertical"/>
		
		<TextView 
			android:id="@+id/menu_ci_enq_subtitle"
		    android:layout_width="match_parent"
			android:layout_height="fill_parent" 
			android:layout_weight="1" 
			android:focusable="false"
			android:gravity="center_vertical"/>
		
		<EditText 
			android:id="@+id/menu_ci_enq_input"
			android:layout_width="match_parent" 
		    android:layout_height="fill_parent"
			android:layout_weight="1"
			android:layout_marginLeft="40dp" 
			android:layout_marginRight="40dp"
			android:background="@drawable/tk_cm_item_selected"
			android:gravity="center" 
			android:singleLine="true"
			android:cursorVisible="false"
			android:textColor="@color/white"/>
		
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_weight="1"/>
</LinearLayout>
