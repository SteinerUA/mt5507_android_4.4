 <!-- iqiyi for TCL Widgets .2013-11-21-->
	<add-resource type="style" name="TCLButtonEspecial" />
	<style name="TCLButtonEspecial">
		<item name="android:background">@android:drawable/tcl_btn_especial</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>    
	</style>    

    <add-resource type="style" name="TCLAlertDialog" />
    <style name="TCLAlertDialog" parent="android:style/Theme.Dialog.Alert">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

   
	<add-resource type="style" name="tcl_toast_text" />
	<style name="tcl_toast_text">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">24sp</item>
	</style>

	<add-resource type="style" name="tcl_alert_text_title" />
	<style name="tcl_alert_text_title">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:typeface">monospace</item>
	</style>

	<add-resource type="style" name="TCLButton" />
	<style name="TCLButton">
		<item name="android:background">@drawable/tcl_btn_default</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <!--item name="android:textColor">@android:color/primary_text_light</item--> 
		<item name="android:textColor">@drawable/tcl_btntext_818_selector</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>

	<add-resource type="style" name="TCLButtonBlack" />
	<style name="TCLButtonBlack">
		<item name="android:background">@drawable/tcl_btn_black</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <!--item name="android:textColor">@android:color/primary_text_dark</item-->
		<item name="android:textColor">@drawable/tcl_btntext_818_selector</item> 
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
</resources>
