<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tvos="http://schemas.android.com/apk/res/tvos" 
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
    android:background="@tvos:drawable/tcl_especial_bg"
    android:layout_gravity="center"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    >
 	<ImageView
 	android:id="@+tvos:id/tcl_especial_idpic"
 	android:src="@tvos:drawable/tcl_toast_warning_especial"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="40dp"
	android:scaleType="center"	
	android:layout_gravity="center_vertical"
	/>
<TextView android:id="@+tvos:id/tcl_especial_idmessage2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginRight="60dp"
	android:layout_marginLeft="25dp"
	android:textSize="28sp"
	android:textColor="#ffffff"
	android:lineSpacingExtra="10dp"
	android:layout_gravity="center_vertical"
	android:editable="false"/>
</LinearLayout>
