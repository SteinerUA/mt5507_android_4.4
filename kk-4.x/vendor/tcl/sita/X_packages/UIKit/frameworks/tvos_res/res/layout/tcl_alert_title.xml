<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tvos="http://schemas.android.com/apk/res/tvos" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingLeft="24dp"    
	android:background="@android:color/transparent"
	android:layout_centerVertical="true">

	<ImageView 
		android:id="@+tvos:id/alert_title_icon"	
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingTop="10dp"
         >
	</ImageView>
	<TextView
		android:id="@+tvos:id/alert_title_text"       
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@tvos:id/alert_title_icon"
		android:layout_alignTop="@tvos:id/alert_title_icon"
		android:layout_centerVertical="true"
		android:textAppearance="@tvos:style/tcl_alert_text_title"
		android:layout_marginLeft="20dp"
         >
	</TextView>
	
</RelativeLayout>

