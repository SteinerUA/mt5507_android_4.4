<selector xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tvos="http://schemas.android.com/apk/res/tvos">
    <item android:state_window_focused="false" android:state_enabled="true"
        android:drawable="@tvos:drawable/tcl_menu_normal_right" />
    <item android:state_window_focused="false" android:state_enabled="false"
        android:drawable="@tvos:drawable/tcl_senior_menu_right_disable" />
    <item android:state_pressed="true" 
        android:drawable="@tvos:drawable/tcl_menu_selector_right" />
    <item android:state_focused="true" android:state_enabled="true"
        android:drawable="@tvos:drawable/tcl_menu_focus_right" />
    <item android:state_enabled="true"
        android:drawable="@tvos:drawable/tcl_menu_normal_right" />
    <item android:state_focused="true"
        android:drawable="@tvos:drawable/tcl_senior_menu_right_disable_focuse" />
    <item
         android:drawable="@tvos:drawable/tcl_senior_menu_right_disable" />
</selector>