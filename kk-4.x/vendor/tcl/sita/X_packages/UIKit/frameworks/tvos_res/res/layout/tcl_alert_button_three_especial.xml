<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tvos="http://schemas.android.com/apk/res/tvos" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

            <android.tclwidget.TCLButtonEspecial android:id="@+tvos:id/tcl_especial_idbutton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                 
                android:text="@tvos:string/tcl_dialog_ok"
                android:textSize="30sp"
                android:gravity="center"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:layout_marginRight="30dp"/>
    
            <android.tclwidget.TCLButtonEspecial android:id="@+tvos:id/tcl_especial_idbutton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:gravity="center"
                android:text="@tvos:string/tcl_dialog_ignore"
                android:textSize="30sp"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:layout_marginRight="30dp"/>

    
            <android.tclwidget.TCLButtonEspecial android:id="@+tvos:id/tcl_especial_idbutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:gravity="center"
                android:text="@tvos:string/tcl_dialog_cancle"
                android:textSize="30sp"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                />
     </LinearLayout>
