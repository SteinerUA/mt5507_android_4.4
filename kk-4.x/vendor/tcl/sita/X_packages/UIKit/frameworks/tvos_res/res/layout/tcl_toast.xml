<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tvos="http://schemas.android.com/apk/res/tvos" 
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
    android:background="@tvos:drawable/tcl_toast_818_back"
    android:gravity="center"
   >
<TextView android:id="@+tvos:id/message"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:maxWidth="400dip"
	android:layout_marginRight="30px"
	android:layout_marginTop="30px"
	android:layout_marginLeft="30px"
	android:layout_marginBottom="30px"
	android:lineSpacingExtra="10px"
	android:textAppearance="@tvos:style/tcl_toast_text"
	android:editable="false"	
	android:layout_gravity="center"
	
/>
</LinearLayout>
