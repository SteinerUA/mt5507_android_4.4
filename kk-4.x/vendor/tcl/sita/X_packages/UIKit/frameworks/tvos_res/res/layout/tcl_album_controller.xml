<?xml version="1.0" encoding="utf-8"?>

	<!-- android:background="#CC666600" -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tvos="http://schemas.android.com/apk/res/tvos" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 	
 	
<RelativeLayout 
		android:id="@+tvos:id/controll_bar"
  	android:layout_height="fill_parent"
  	android:layout_width="fill_parent"
  	android:paddingBottom="30px"
  	 	>
    <FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
       		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		>
        
        <!-- 按钮地板层 -->

		<RelativeLayout 
		    	android:id="@+tvos:id/RelativeLayout01"
		    	android:layout_height="fill_parent"
		    	android:layout_width="fill_parent"
		    	android:background="#00000000" 	>
		    		<LinearLayout
			    	android:layout_height="wrap_content"
			    	android:layout_width="fill_parent"
			        android:background="@tvos:drawable/tcl_button_desk"
			        android:layout_alignParentBottom="true"			        
			        >
			        </LinearLayout>
		</RelativeLayout>
<!-- 按钮层 -->

		 <RelativeLayout 
		    	android:id="@+tvos:id/RelativeLayout01"
		    	android:layout_height="fill_parent"
		    	android:layout_width="fill_parent"
		    	android:paddingBottom="11px"
		    	android:background="#00000000" 	>
		    		<LinearLayout
		    		android:id="@+tvos:id/button_group"
			    	android:layout_height="wrap_content"
			    	android:layout_width="wrap_content"
			    	android:layout_alignParentBottom="true"
			    	android:layout_centerHorizontal="true"
			    	android:orientation="horizontal" >
					    <ImageButton android:id="@+tvos:id/media_controller_pause" 
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			                android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_pause" />					        
					        
					    <ImageButton android:id="@+tvos:id/prev"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_prev" />
						 
						<ImageButton android:id="@+tvos:id/next" 
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			            android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_next" />
						
						<ImageButton android:id="@+tvos:id/turn_right"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_turn_right" />
						
						<ImageButton android:id="@+tvos:id/turn_left"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_turn_left" />

						<ImageButton android:id="@+tvos:id/zoom_up"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_zoom_up" />
						
						<ImageButton android:id="@+tvos:id/zoom_down"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_zoom_down" />

						<ImageButton android:id="@+tvos:id/info"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_info" />
						
						<ImageButton android:id="@+tvos:id/music"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_music" />
						
						<ImageButton android:id="@+tvos:id/set"
			        	android:background="#00ffffff"
			        	android:layout_marginRight="4px"
			        	android:layout_marginLeft="4px"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" 
						android:src="@tvos:drawable/tcl_btn_set" />
			        </LinearLayout>
				</RelativeLayout>
	</FrameLayout>
</RelativeLayout>

</FrameLayout>
