<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 		android:id="@+id/tcl_alert_button"
 		
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="18px"
        android:paddingRight="18px"
        android:layout_gravity="center"   
        android:orientation="vertical" 
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
      		android:gravity="center"
            android:background="@android:color/transparent">
            <LinearLayout
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_weight="1"
	            android:gravity="center" >               
	            <com.MyWidgetTest.TCLButtonBlack android:id="@+id/button1"
	                android:layout_width="wrap_content"
	               	android:layout_height="wrap_content" 
	                android:text="@string/tcl_dialog_ok"
	                android:textAppearance="@style/tcl_toast_text"
					android:gravity="center"
					android:layout_gravity="center_vertical"
					android:paddingLeft="25dip"
	                android:paddingRight="25dip"
	                style="@style/TCLButtonBlack"
	                />
           </LinearLayout>
           <LinearLayout
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_weight="1"
	            android:gravity="center" >
	            <com.MyWidgetTest.TCLButtonBlack android:id="@+id/button3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="@string/tcl_dialog_cancle"
	                android:textAppearance="@style/tcl_toast_text"
	                android:layout_gravity="center_vertical"
					android:paddingLeft="25dip"
	                android:paddingRight="25dip" 
	                style="@style/TCLButtonBlack"/>
           </LinearLayout>           
           <LinearLayout
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_weight="1"
	            android:gravity="center">
	            <com.MyWidgetTest.TCLButtonBlack android:id="@+id/button2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="@string/tcl_dialog_cancle"
	                android:textAppearance="@style/tcl_toast_text"
	                android:layout_gravity="center_vertical"
					android:paddingLeft="25dip"
	                android:paddingRight="25dip"
	                style="@style/TCLButtonBlack" />
           </LinearLayout>

        </LinearLayout>
     </RelativeLayout>
