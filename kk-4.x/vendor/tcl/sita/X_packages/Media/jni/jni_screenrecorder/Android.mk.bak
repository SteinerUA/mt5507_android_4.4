LOCAL_PATH:= $(call my-dir)

include $(ANDROID_BUILD_TOP)/vendor/tcl/addon/tvos_base.mk

ifneq ($(call tcl-test-cpp-files),)
# use Source files.
# ============================================================


include $(CLEAR_VARS)
LOCAL_MODULE    := libscreenrecorder_jni
LOCAL_SRC_FILES := \
	screenrecorder_jni.cpp \
	screenrecorder.c 
LOCAL_C_INCLUDES := \
	$(LOCAL_PATH)/../stream \
	$(JNI_H_INCLUDE) 
LOCAL_SHARED_LIBRARIES := \
	libutils \
	libcutils \
	libnativehelper \
	libz \
	libmuxer
LOCAL_STATIC_LIBRARIES := 
include $(BUILD_SHARED_LIBRARY)


$(DEFAULT_GOAL): $(LOCAL_PATH)/$(notdir $(LOCAL_BUILT_MODULE))
all_modules: $(LOCAL_PATH)/$(notdir $(LOCAL_BUILT_MODULE))
$(LOCAL_PATH)/$(notdir $(LOCAL_BUILT_MODULE)): $(LOCAL_BUILT_MODULE)
	$(copy-file-to-target-with-cp)

else
# use binary files.
# ============================================================

include $(CLEAR_VARS)
LOCAL_MODULE_TAGS := optional
LOCAL_PREBUILT_LIBS := \
               libscreenrecorder_jni.so              

include $(BUILD_MULTI_PREBUILT)
endif
